#!/bin/sh
# Pre-commit hook to run prettier and gofmt

echo "Running pre-commit checks..."

# Check prettier formatting
echo "Checking Prettier formatting..."
if ! npm run format:check; then
    echo "❌ Prettier formatting issues found. Run 'make format' to fix them."
    exit 1
fi

# Check Go formatting
echo "Checking Go formatting..."
if ! make fmt; then
    echo "❌ Go formatting issues found. Run 'make fmt' to fix them."
    exit 1
fi

echo "✅ All formatting checks passed!"
exit 0
